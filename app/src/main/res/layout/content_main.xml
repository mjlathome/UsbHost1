<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usbhost1.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btnConnect"
        android:onClick="connect"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnUsbDevices"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Read - old"
        android:id="@+id/btnStartRead"
        android:onClick="startRead"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btnDisconnect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Read"
        android:id="@+id/btnStopRead"
        android:onClick="stopRead"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnStartRead"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect - old"
        android:id="@+id/btnDisconnect"
        android:onClick="disconnect"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnConnect"
        android:layout_alignStart="@+id/btnUsbDevices" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usb Devices - old"
        android:id="@+id/btnUsbDevices"
        android:onClick="usbDevices"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValue"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/btnStopRead"
        android:layout_alignEnd="@+id/btnConnect"
        android:text="No Data" />

</RelativeLayout>
